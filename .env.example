# Environment configuration for Railway deployment
NODE_ENV=production

# Database - For Railway, use their provided variable name
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/your-db-name
# If your existing code uses MONGO_URI, Railway will use this instead
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/your-db-name

# Server configuration
PORT=5001

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL=https://unifostedu.com,https://www.unifostedu.com

# JWT configuration (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info
